@model List<Books.Domain.Models.Book>
@{
    ViewData["Title"] = "Book";
}

<div class="text-center">
    <h1 class="display-4">Welcom Books</h1>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-3">
            <a asp-action="Create" asp-controller="Book"
               class="btn btn-primary">Crear Nuevo</a>
        </div>
    </div>
</div>
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Autor
                    </th>
                </tr>

            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var book in Model)
                    {
                        <tr>
                            <td>
                                <text>    @book.BookName </text>
                            </td>
                            <td>
                                @book.Author
                            </td>
                            <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@book.BookId"
                               asp-controller="Book">
                                Editar
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@book.BookId"
                               asp-controller="Book">
                                Eliminar
                            </a>
                            </td>
                       
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            <p> There are no books</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>