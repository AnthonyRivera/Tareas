@model List<Lecture19_Tarea.Models.Book>
@{
    ViewData["Title"] = "Book";
}

<div class="text-center">
    <h1 class="display-4">Welcom Books</h1>
</div>

    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Autor
                    </th>
                </tr>

            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var book in Model)
                    {
                        <tr>
                            <td>
                                <text>    @book.BookName </text>
                            </td>
                            <td>
                                @book.Author
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            <p> There are no books</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>